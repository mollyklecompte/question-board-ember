{{#if addNewQuestion}}
  <h2>New Question</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Question</label>
        {{textarea value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{textarea value=notes id="notes"}}
      </div>

      <button class="btn btn-info" {{action 'saveQuestion1'}}>Save</button>
      <button class="btn btn-primary" {{action 'questionFormHide'}}>Hide</button>
    </form>
  </div>
{{else}}
<h2>Looking for Answers?</h2>
  <button id="new-question-button" class="btn btn-info" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
