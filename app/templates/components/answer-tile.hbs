<div class="well">
  <h4>{{answer.author}}{{troll-answer answer}}</h4>
  <h5>Rating: {{answer.rating}}</h5>
  <p>{{answer.content}}</p>
  <h5>{{answer.date}}</h5>
  <h5>Votes: {{answer.votes}}</h5>

  <button type="button" class="btn btn-large vote-button" id="upvote-button" {{action 'upVote' answer}}>
  <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true">UpVote</span>
  </button>
  <button type="button" class="btn btn-large vote-button" id="downvote-button" {{action 'downVote' answer}}>
  <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true">DownVote</span>
  </button>

</div>
