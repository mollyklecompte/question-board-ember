<br>
<button class="btn btn-danger" {{action 'delete' question}}>Delete Question</button>

<h3>{{question.author}} asked:</h3>
<h2><em>"{{question.content}}"</em></h2>
<p>{{question.notes}}</p>

<h5>{{question.date}}</h5>
<button class="btn btn-info" {{action 'faveThisQuestion' question}}>Add Question to Favorites</button>

<hr>

<h2>Answers</h2>
<ul>
  {{#each sortedAnswers as |answer|}}
    {{answer-tile answer=answer upVote='upVote' downVote="downVote"}}
  {{/each}}
</ul>
